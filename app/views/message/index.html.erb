



<% @messages_from_db.each do |msg|%>
  <div class="message-box">
    <h4><%=msg[:user]%> </h4>
    <p><%=msg[:content]%></p>
    <h6><span class="glyphicon glyphicon-time"></span> <%= msg[:posted_at].localtime.strftime("%l:%M - %b %d")  %></h6>
  </div>

<%end%>


<%= form_for @new_msg do |f| %>

  <div class="form-group col-xs-6 col-xs-offset-1">  <%= f.label :user %><br/>
    <%= f.text_field :user, class: "form-control" %>
  </div>

  <div class="form-group col-xs-10 col-xs-offset-1">
    <%= f.label :content %><br/>
    <%= f.text_field :content, class: "form-control"%>
  </div>

  <div class="form-group col-xs-10 col-xs-offset-1">
    <%= f.submit "+" , class: "btn btn-success" %>
  </div>

<%end%>
